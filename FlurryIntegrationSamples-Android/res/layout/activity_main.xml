<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flurry_splash_portrait"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:padding="14dp" >

    <TextView
        android:id="@+id/ad_spaces_banner_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="@string/banner_title" />

    <Spinner
        android:id="@+id/flurry_ad_spaces_banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_spaces_banner_text" />

    <TextView
        android:id="@+id/ad_spaces_takover_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flurry_ad_spaces_banner"
        android:layout_marginTop="40dp"
        android:text="@string/takeover_title" />

    <Spinner
        android:id="@+id/flurry_ad_spaces_takeover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_spaces_takover_text" />

</RelativeLayout>